apiVersion: k3d.io/v1alpha5
kind: Simple
metadata:
  name: shamrock-local
servers: 1
agents: 0
image: rancher/k3s:v1.29.3-k3s1
network: shamrock-local
subnet: auto
token: ShamrockLocalDevToken
volumes:
  - # Bootstrap: Argo CD
    volume: {{ repo_path -}}/builds/cluster-local/argocd/build.yaml:/var/lib/rancher/k3s/server/manifests/zz-00-argocd.yaml:Z
    nodeFilters: ["server:*"]
  - # Bootstrap: ApplicationSet
    volume: {{ repo_path -}}/cluster-local/applicationset:/var/lib/rancher/k3s/server/manifests/zz-01-applicationset:Z
    nodeFilters: ["server:*"]
  - # Argo CD manifests
    volume: {{ repo_path -}}:/mnt/argo-cd-manifests:Z
    nodeFilters: ["server:*"]
  - # DeepPharmGraph Airflow DAGs
    volume: {{ repo_path -}}/cluster-local/deeppharmgraph/volumes/dags:/mnt/dpg-airflow-dags:Z
ports:
  - # Envoy Gateway
    port: 80:30000
    nodeFilters: ["server:0:direct"]
registries:
  create:
    name: shamrock-local-registry.localhost
options:
  k3d:
    disableLoadbalancer: true
  k3s:
    extraArgs:
      - arg: --disable-network-policy=true
      - arg: --disable-helm-controller=true
      - arg: --disable=traefik
      - arg: --disable=servicelb
